<%= content_for :body_id, "registration" %>
<section class="container-fluid">
  <div class="container-lg">
    <div class="row">
      <div class="col-lg-6 m-auto user">
        <div class="col-lg-12 icon">
          <%= image_tag "journaling-hero.png", width: "100px", height: "auto", class: "d-block" %>
        </div>
        <h1>Register to start using journalite</h1>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <div class="field">
            <%= f.label :email %><br>
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
          </div>
          <div class="field">
            <%= f.label :password %>
            <% if @minimum_password_length %><br>
            <em>(requires a minimum of <%= @minimum_password_length %> characters)</em>
            <% end %><br>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </div>
          <div class="field">
            <%= f.label :password_confirmation %><br>
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
          </div><br>
          <div class="actions">
            <%= f.submit "Register now", class: "btn j-btn" %>
          </div>
        <% end %>
        <br>
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</section>