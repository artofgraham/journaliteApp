<%= form_with(model: entry) do |form| %>
  <% if entry.errors.any? %>
    <section class="error">
      <h2>Uh oh!</h2>
      <p><%= pluralize(entry.errors.count, "error") %> prevented your journal entry from being created.</p>
      <ul>
        <% entry.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </section>
  <% end %>
  <section>
    <%= form.label :jentrylog, "Date and time", style: "display: block" %>
    <%= form.datetime_field :jentrylog %>
  </section>
  <section class="box">
    <%= form.label :gratitude, "Gratitude entry", id: "g-entry" %>
    <%= form.check_box :gratitude %>
    <div class="tick"></div>
  </section>
  <section>
    <%= form.label :jentry, "Dear Journal", style: "display: block" %>
    <%= form.text_area :jentry, class: "page" %>
  </section>
  <section class="row">
    <%= form.label "How are you feeling now?", style: "display: block" %>
    <div class="mood col-lg-2">
      <%= image_tag "depressed-emoji.png" %>
      <%= form.radio_button :feeling, "depressed" %><br>
      <div class="circle"></div>
      <%= form.label "Depressed", for: "entry_feeling_depressed" %>
    </div>
    <div class="mood col-lg-2">
      <%= image_tag "sad-emoji.png" %>
      <%= form.radio_button :feeling, "sad" %><br>
      <div class="circle"></div>
      <%= form.label "Sad", for: "entry_feeling_sad" %>
    </div>
    <div class="mood col-lg-2">
      <%= image_tag "apathetic-emoji.png" %>
      <%= form.radio_button :feeling, "apathetic" %><br>
      <div class="circle"></div>
      <%= form.label "Apathetic", for: "entry_feeling_apathetic" %>
    </div>
    <div class="mood col-lg-2">
      <%= image_tag "happy-emoji.png" %>
      <%= form.radio_button :feeling, "happy" %><br>
      <div class="circle"></div>
      <%= form.label "Happy", for: "entry_feeling_happy" %>
    </div>
    <div class="mood col-lg-2">
      <%= image_tag "excited-emoji.png" %>
      <%= form.radio_button :feeling, "excited" %><br>
      <div class="circle"></div>
      <%= form.label "Excited", for: "entry_feeling_excited" %>
    </div>
    <div class="mood col-lg-2">
      <%= image_tag "love-emoji.png" %>
      <%= form.radio_button :feeling, "love" %><br>
      <div class="circle"></div>
      <%= form.label "Love", for: "entry_feeling_love" %>
    </div>
  </section>
  <section>
    <%= form.hidden_field :user_id %>
  </section>
  <section>
    <%= form.submit "Add entry", :class => "btn j-btn new d-inline-block" %>
  </section>
<% end %>