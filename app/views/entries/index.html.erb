<%= content_for :body_id, "j-entries" %>
<section class="container-fluid">
  <div class="container-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="success">
          <p><%= notice %></p>
        </div>
        <h1 class="heading">Journal entries</h1>
        <p>All your entries display here and are sorted by most recent first.</p>
        <%= link_to "New entry", new_entry_path, class: "btn j-btn new" %>
        <div id="entries">
          <% @entries.each do |entry| %>
            <div class="col-lg-6 float-start">
              <div class="log">
                <%= render entry %>
                <%= link_to "View", entry, class: "btn j-btn" %>
              </div>
            </div>
          <% end %>
          <section class="col-lg-12 float-start">
            <div class="paginator d-block float-end">
              <%= paginate @entries %>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</section>