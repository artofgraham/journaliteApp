<%= content_for :body_id, "t-records" %>
<section class="container-fluid">
  <div class="container-lg">
    <div class="row">
      <div class="col-lg-12">
        <div class="success">
          <p><%= notice %></p>
        </div>
        <h1 class="heading">Thought records</h1>
        <%= link_to "New record", new_record_path, class: "btn j-btn new" %>
        <div id="records">
          <% @records.each do |record| %>
            <div class="col-lg-6 float-start">
              <div class="rec">
                <%= render record %>
                <%= link_to "View", record, class: "btn j-btn" %>
              </div>
            </div>
          <% end %>
          <section class="col-lg-12 float-start">
            <div class="paginator d-block float-end">
              <%= paginate @records %>
            </div>
          </section>
        </div>
      </div>
    </div>
  </div>
</section>