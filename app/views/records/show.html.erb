<%= content_for :body_id, "view" %>
<section class="container-fluid">
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        <h1>Your thought record</h1>
      </div>
      <div class="rec col-lg-8">
        <div class="success">
          <p><%= notice %></p>
        </div>
        <%= render @record %>
      </div>
      <div class="col-lg-8">
        <%= link_to "Edit", edit_record_path(@record), class: "btn j-btn edit d-inline-block" %>
        <div class="d-inline-block">
          <%= button_to "Delete", @record, method: :delete, class: "btn j-btn delete" %>
        </div>
        <%= link_to "View records", records_path, class: "btn j-btn d-inline-block" %>
      </div>
    </div>
  </div>
</section>